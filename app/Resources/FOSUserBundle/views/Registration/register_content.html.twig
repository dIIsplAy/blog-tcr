{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
<tbody>
        <div class="container-fluid">
        <div class="container">
        <div class="login_wrapper register">
            <div id="scroll-to"class="animate form login_form">
                <section class="login_content">
                    <h1 class="conect text-center">Register</h1>
              {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
              <div>
                     {{ form_widget(form.name, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Name' }}) }}
              </div>
              <div>
                    {{ form_widget(form.surname, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Surname'}}) }}
                </div>
                <div>
                        {{ form_widget(form.username, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Username'}}) }}
                </div>
                        <div>
                            {{ form_widget(form.age, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Age'}}) }}
                        </div>
                        <div>
                                {{ form_widget(form.email, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Email'}}) }}
                            </div>
                            <div>
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Password'}}) }}
                                </div>
                                <div>
                                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'conect-input form-control', 'placeholder': 'Confirm password'}}) }}
                                    </div>
              {{ form_widget(form) }}
    <div class="position-exa">
         <div class="exa">
            <input class="btn-exa" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
    </div>
    {{ form_end(form) }}

            </div>
          </form>
        </section>
      </div>
    </div>
   </div>
   </div>
</tbody>
{% endblock %}
