{% trans_default_domain 'FOSUserBundle' %}


{% block body %}
<tbody>
    <div class="container-fluid">
    <div class="container">
    <div class="login_wrapper login">
        <div id="scroll-to"class="animate form login_form">
            <section class="login_content">
                <form action="{{ path("fos_user_security_check") }}" method="post">
    
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
    
                    <h1 class="conect">Connexion</h1>
                    <div>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control conect-input" placeholder="Username" />
                    </div>
                    <div>
                        <input type="password" id="password" name="_password" required="required" class="form-control conect-input" placeholder="Password" />
                    </div>
                    <div class="position-exa">
                        <div class="exa">
                            <button class="btn-2 btn-log"type="submit" id="_submit"  name="_submit">{{ 'security.login.submit'|trans }}</button>
                        </div>
                    </div>
                    
                        <a class="reset-pass" href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
                
    
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
    
                    <div class="clearfix"></div>
                </form>
            </section>
        </div>
    </div>
    </div>
    </div>
</tbody>
{% endblock %}