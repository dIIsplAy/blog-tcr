{% extends "::base.html.twig" %}

{% block title %}AppBundle:FrontController:show{% endblock %}

{% block body %}
        <tbody>
 <div class="container-fluid">
 <div class="container">
     <div class="regroup-all">
 <div class="text-center">
 <h1 id="style-h1">{{ article.title }}</h1>
 </div>
 <tr>
    <div id="desc-article">
    <ul>
        <li class="li-show">
             <span class="th-resize">Autor :</span>
             <span class="td-resize">
             <td>{{ article.user }}</td>
             </span>
        </li>
        <!-- <li class="li-show">
                <span class="th-resize">Title :</span>
                <span class="td-resize">
                <td>{{ article.title }}</td>
                </span>
        </li> -->
        <li class="li-show">
                <span class="th-resize">Description : </span>
                <span class="td-resize">
                <td>{{ article.description }}</td>
                </span>
        </li>
    </ul>
    </div>
</tr>
<div  id="h2-show" class="text-center">
    <h2 id="style-h2">Comment lists</h2>
</div>
   {% if article.comments | length > 0 %}
    {% for comment in article.comments %}
		<tr>
           <ul>
           <li id="comment-style">
               <td>{{ comment.content }}</td>
               </li>
           </ul>
           </tr>
       {% endfor %}
   {% else %}
   <p class="text-center" id="no-comment">
        No comments yet</p>
       
       {% endif %}
            {{ form_start(form, {'action': path('front_new', { 'id': article.id }), 'method': 'POST'}) }}
            <div class="comment-div">
        <div class="form-group text-center">
            {{ form_label(form.content, 'Leave a comment')}}
            {{ form_widget(form.content ,{'value':'','attr':{'class':'form-control'}})}}
            {{ form_errors(form.content)}}

         </div>
         <div id="creat-com">
        <input id="creat-style"type="submit" class="btn btn-outline-success"value="Send" />
        </div>
    </div>
    {{ form_end(form) }}
    <ul>
        <li id="back-index">
            <a  id="back-index-style"class="btn btn-outline-primary" href="{{ path('index') }}">Back to the list</a>
        </li>
    </ul>
</div>
</div>
</div>
        </tbody>
{% endblock %}
