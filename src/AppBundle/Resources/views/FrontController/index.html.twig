{% for article in articles %} {% if loop.index is divisible by(2) %}
<div class="container container-article">
  <div class="row">
    <div class="col-md-6">
      <div class="div-article-titre">
        <h1 class="h1-article">
          {{ article.title|capitalize }}
        </h1>
      </div>
      <div class="div-paragraphe-article">
        <p class="paragraphe-article">
          {{ article.description[:200] }} ...
        </p>
      </div>
      <div class="d-flex justify-content-start bouton-article">
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
          <a href="{{ path('show', { 'id': article.id }) }}">
            <i class="material-icons">add</i>
          </a>
        </button>
      </div>
    </div>
    <div class="col-md-6">
      <img class="size-img-article" src="{{ asset('/bundles/app/asset/img_article/' ~ article.image) }}">
    </div>
  </div>
</div>



{% else %}
