{% for article in articles %} {% if loop.index is divisible by(2) %}
<div class="container container-article">
  <div class="row">
    <div class="col-md-6 container-info-article-right">
      <div class="div-article-titre">
        <h1 class="h1-article">
          {{ article.title|capitalize }}
        </h1>
      </div>
      <div class="div-paragraphe-article">
        <p class="paragraphe-article">
          {{ article.description[:180] }} ...
        </p>
      </div>
      <div class="div-btn" >
        <a  class="style-btn-text" href="{{ path('show', { 'id': article.id }) }}">
          see more
        </a>
      </div>
    </div>
    <div class="col-md-5">
      <img class="size-img-article" src="{{ asset('/promo3/tcristophol/blog-tcr/bundles/app/asset/img_article/' ~ article.image) }}">
    </div>
  </div>
</div>



